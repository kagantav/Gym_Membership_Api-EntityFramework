
@{
	Layout = null;
}
@using Gym_Membership.Models.Entities
@model List<Uye>

<html>
<head>
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    </head>
<body>

	<h2>
		<div style="height:100%; background-color:grey">
			<div class="alert alert-dark">
				<h2 class="display-2" style="margin-left:40%;">
					Mamba Gym
				</h2>
			</div>
			<div class="container">
				<table class="table table-hover table-dark" style="position:relative;z-index:999;">
					<tr  class="table-secondary">
						<th>Uye Adi</th>
						<th>Uye SoyAdi </th>
						<th>Uye Kaydolma Tarihi </th>
						<th>Uye Bitis Tarihi </th>
						<th>Duzenle</th>
						<th>Sil</th>

					</tr>
			</div>

			@foreach (var item in Model)
			{
				<tr>
					<td>@item.UyeAdi</td>
					<td>@item.UyeSoyadi</td>
					<td>@item.UyelikBaslangicTarihi</td>
					<td>@item.UyelikBitisTarihi</td>
					<td><a class="btn btn-outline-info" href="/Member/Edit/@item.Id">Düzenle</a></td>
					<td><a class="btn btn-outline-danger" href="/Member/Delete/@item.Id">Sil</a></td>

				</tr>
			}

		</div>
		</table>

		<div class="row" style=" position:relative; z-index:1;">
			<a class="btn btn-success" href="/Member/New">Yeni Kayıt Yap</a>

		</div>


			

</body>
</html>